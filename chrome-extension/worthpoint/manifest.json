{
  "manifest_version": 3,
  "name": "Worthpoint / Ebay",
  "version": "1.0",
  "permissions": [
    "tabs",
    "scripting",
    "windows"
  ],
  "action": {},
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/*",
        "*://*.worthpoint.com/*",
        "*://*.ebay.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}
