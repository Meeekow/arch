{
  "manifest_version": 3,
  "name": "Tab Manipulation",
  "version": "1.0",
  "permissions": ["tabs", "windows"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "detach-tab": {
      "suggested_key": {
        "default": "Alt+Shift+J"
      },
      "description": "Detach the focused active tab"
    },
    "reattach-tab": {
      "suggested_key": {
        "default": "Alt+Shift+K"
      },
      "description": "Reattach the focused active tab"
    }
  },
  "host_permissions": ["<all_urls>"]
}