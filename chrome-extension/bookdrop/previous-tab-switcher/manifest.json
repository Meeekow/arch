{
  "manifest_version": 3,
  "name": "Last Active Tab Switcher",
  "description": "Switch back to the previously focused tab and copy current tab URL with hotkeys.",
  "version": "1.2",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "switch-to-previous-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+P"
      },
      "description": "Switch to previously active tab"
    },
    "copy-current-url": {
      "suggested_key": {
        "default": "Ctrl+Shift+U"
      },
      "description": "Copy current tab URL to clipboard"
    }
  },
  "action": {
    "default_title": "Tab Navigator"
  }
}
